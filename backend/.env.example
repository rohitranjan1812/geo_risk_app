# Database Configuration
DATABASE_URL=postgresql+asyncpg://georisk:georisk_password@db:5432/georisk_db
DATABASE_URL_SYNC=postgresql://georisk:georisk_password@db:5432/georisk_db

# Application Settings
APP_NAME=GeoRisk API
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# External APIs (for geographic data)
MAPBOX_API_KEY=your-mapbox-api-key
USGS_API_ENDPOINT=https://earthquake.usgs.gov/fdsnws/event/1/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
